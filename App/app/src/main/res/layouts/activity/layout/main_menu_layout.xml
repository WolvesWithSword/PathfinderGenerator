<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/StandartTheme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/theme_color_3">

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            android:text="Pathfinder Generator"
            android:textAlignment="center"
            android:textColor="@color/text_color_7"
            android:textSize="36sp"
            android:textStyle="bold" />
    </LinearLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:adjustViewBounds="true"
        android:background="@color/theme_color_6"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/main_menu_picture" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/theme_color_3"
        android:orientation="vertical">

        <Button
            android:id="@+id/creation_standard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"

            style="@style/Button_style_1"
            android:text="Création Standard"
            android:textSize="25sp" />

        <Button
            android:id="@+id/creation_treasure"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"

            style="@style/Button_style_1"
            android:text="Création par Trésor"
            android:textSize="25sp"/>

        <Button
            android:id="@+id/creation_item"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"

            style="@style/Button_style_1"
            android:text="Création d'objets"
            android:textSize="25sp"
            />

        <Button
            android:id="@+id/save_manager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"

            style="@style/Button_style_1"
            android:text="Sauvegardes"
            android:textSize="25sp" />

    </LinearLayout>
</LinearLayout>