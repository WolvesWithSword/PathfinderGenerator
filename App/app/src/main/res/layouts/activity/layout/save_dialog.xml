<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/dialog_background"
        android:scaleType="fitXY"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignTop="@id/container"
        android:layout_alignBottom="@id/container"
        android:layout_alignLeft="@id/container"
        android:layout_alignRight="@id/container"/>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="15dp"
            android:paddingBottom="10dp"

            android:textColor="@color/theme_color_1"
            android:text="Sauvegarde"
            android:fontFamily="@font/seagram"
            android:textSize="24sp"
            android:textAlignment="center"
            />

        <EditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_marginHorizontal="20dp"

            android:textCursorDrawable="@drawable/cursor_1"

            android:textColor="@color/theme_color_1"
            android:background="@color/theme_color_8_opacity"
            android:fontFamily="@font/seagram"
            android:inputType="text"
            android:textAlignment="center"
            android:hint="nom de la sauvegarde...">

        </EditText>

        <TextView
            android:id="@+id/error_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"

            android:fontFamily="@font/seagram"
            android:textColor="@color/text_error">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp">

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="5dp"

                android:textColor="@color/text_color_1"
                android:text="Annuler"
                android:fontFamily="@font/seagram"
                android:backgroundTint="@color/theme_button_1_opacity">

            </Button>

            <Button
                android:id="@+id/OK_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"

                android:textColor="@color/text_color_1"
                android:fontFamily="@font/seagram"
                android:text="OK"
                android:backgroundTint="@color/theme_button_1_opacity"
                android:layout_height="match_parent">

            </Button>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>