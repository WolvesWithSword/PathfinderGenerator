<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/SavePreviewStyle"
    android:paddingBottom="12dp"
    android:background="@drawable/save_preview_background"
    android:layout_marginBottom="30dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button_border_2"
        android:layout_marginBottom="15dp"
        >
        <TextView
            android:id="@+id/save_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:textColor="@color/text_color_2"
            android:text="Save"
            android:textAlignment="center"
            android:paddingTop="8dp"
            android:textSize="22sp"
            android:textStyle="bold"

            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:layout_marginRight="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="4"
            android:padding="4dp"
            android:background="@color/theme_color_3_v2_opacity"
            android:orientation="horizontal"
            android:layout_marginBottom="9dp">

            <TextView
                android:layout_marginLeft="30dp"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Valeur du trÃ©sor :"
                />

            <TextView
                android:id="@+id/save_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="0"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="po" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:padding="4dp"
            android:background="@color/theme_color_3_v2_opacity">


            <TextView
                android:layout_marginLeft="30dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Nombre d'item :"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/save_nb_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="0"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:layout_marginTop="15dp"
            android:paddingHorizontal="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/save_edit_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="1"
                android:background="@drawable/button_border_2"
                app:srcCompat="@android:drawable/ic_menu_edit" />

            <ImageButton
                android:id="@+id/save_rename_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/button_border_2"
                app:srcCompat="@android:drawable/ic_menu_sort_alphabetically" />

            <ImageButton
                android:id="@+id/save_delete_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_border_2"
                app:srcCompat="@android:drawable/ic_menu_delete" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>