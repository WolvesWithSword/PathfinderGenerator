<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/background_item_image"
        android:scaleType="fitXY"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignTop="@id/container"
        android:layout_alignBottom="@id/container"
        android:layout_alignLeft="@id/container"
        android:layout_alignRight="@id/container"/>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/Item_style">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:background="@drawable/item_button_border">

                <ImageView
                    android:id="@+id/art_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:srcCompat="@tools:sample/avatars[0]" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="7">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Objet d'Art"
                    android:fontFamily="@font/seagram"
                    android:textColor="@color/text_color_5"
                    android:textAlignment="textEnd"
                    android:textSize="10sp"
                    android:textStyle="italic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="4"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:background="@drawable/title_border"

                            android:layout_marginVertical="7dp"
                            android:layout_marginHorizontal="5dp">

                            <TextView
                                android:id="@+id/art_name"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Name"

                                android:padding="4dp"
                                android:background="@color/theme_error_opacity"
                                android:textAlignment="center"
                                android:textSize="16sp"
                                android:fontFamily="@font/seagram"
                                android:textColor="@color/text_color_5"/>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="3dp"
                            android:layout_marginHorizontal="5dp"
                            android:background="@color/theme_color_8_opacity">

                            <TextView
                                android:id="@+id/art_price_info"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"

                                android:textColor="@color/text_color_3"
                                android:fontFamily="@font/seagram"
                                android:text="Prix : "
                                android:textAlignment="center"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/art_price"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"

                                android:fontFamily="@font/seagram"
                                android:textColor="@color/text_color_5"
                                android:text="prix"
                                android:textAlignment="center"
                                android:textSize="14sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/artitem_delete"
                        android:layout_width="0dp"
                        android:layout_height="39dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"

                        android:background="@drawable/item_button_border"
                        android:backgroundTint="@color/theme_button_1_opacity"
                        app:srcCompat="@android:drawable/ic_menu_delete"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>