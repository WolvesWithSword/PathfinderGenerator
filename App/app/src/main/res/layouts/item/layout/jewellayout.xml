<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/background_item_image"
        android:scaleType="fitXY"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignTop="@id/container"
        android:layout_alignBottom="@id/container"
        android:layout_alignLeft="@id/container"
        android:layout_alignRight="@id/container"/>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/Item_style">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:background="@drawable/item_button_border">

                <ImageView
                    android:id="@+id/jewel_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:srcCompat="@tools:sample/avatars[0]" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="7">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="@string/jewel"
                    style="@style/Item_info" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="4"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:background="@drawable/title_border"

                            android:layout_marginVertical="7dp"
                            android:layout_marginHorizontal="5dp">

                            <TextView
                                android:id="@+id/jewel_name"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                style="@style/Item_title"
                                android:text="Name" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="3dp"
                            android:layout_marginHorizontal="5dp"
                            android:background="@color/theme_color_8_opacity">

                            <TextView
                                android:id="@+id/jewel_material_info"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="center"

                                android:text="@string/material_title"
                                style="@style/Item_section" />

                            <TextView
                                android:id="@+id/jewel_material"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="center"

                                android:text="material"
                                style="@style/Item_text"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="3dp"
                            android:layout_marginHorizontal="5dp"
                            android:background="@color/theme_color_8_opacity"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:id="@+id/jewel_size_info"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"

                                android:text="@string/size_title"
                                style="@style/Item_section" />

                            <TextView
                                android:id="@+id/jewel_size"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="1"

                                style="@style/Item_text"
                                android:text="taille" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="3dp"
                            android:layout_marginHorizontal="5dp"
                            android:background="@color/theme_color_8_opacity"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:id="@+id/jewel_work_info"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"

                                android:text="@string/work_jewel_title"
                                style="@style/Item_section" />

                            <TextView
                                android:id="@+id/jewel_work"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"

                                style="@style/Item_text"
                                android:text="simple" />

                        </LinearLayout>
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/jewel_delete"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"

                        android:background="@drawable/item_button_border"
                        android:backgroundTint="@color/theme_button_1_opacity"
                        app:srcCompat="@android:drawable/ic_menu_delete" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/jewel_gemN_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="@drawable/title_border"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/textgem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    style="@style/Item_title"
                    android:text="@string/gem_N"
                    android:padding="2dp"
                    android:textSize="14sp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="3dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/theme_color_8_opacity">

                <TextView
                    android:id="@+id/jewel_gem_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"

                    style="@style/Item_section"
                    android:text="@string/gem_title" />

                <TextView
                    android:id="@+id/jewel_gem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"

                    style="@style/Item_text"
                    android:text="gem" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="3dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/theme_color_8_opacity"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/jewel_workgem_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"

                    style="@style/Item_section"
                    android:text="@string/work_title"/>

                <TextView
                    android:id="@+id/jewel_workgem"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"

                    style="@style/Item_text"
                    android:text="travail"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/jewel_gemN_1_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="@drawable/title_border"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/textgem2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    style="@style/Item_title"
                    android:text="@string/gem_N1"
                    android:padding="2dp"
                    android:textSize="14sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="3dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/theme_color_8_opacity">

                <TextView
                    android:id="@+id/jewel_gem2_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    style="@style/Item_section"
                    android:text="@string/gem_title" />

                <TextView
                    android:id="@+id/jewel_gem2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"

                    style="@style/Item_text"
                    android:text="gem" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="3dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/theme_color_8_opacity"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/jewel_number2_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"

                    style="@style/Item_section"
                    android:text="@string/number_title" />

                <TextView
                    android:id="@+id/jewel_number2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"

                    style="@style/Item_text"
                    android:text="Nombre" />

                <TextView
                    android:id="@+id/jewel_workgem2_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"

                    style="@style/Item_section"
                    android:text="@string/work_title" />

                <TextView
                    android:id="@+id/jewel_workgem2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"

                    style="@style/Item_text"
                    android:text="travail"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/jewel_gemN_2_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="@drawable/title_border"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/textgem3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    style="@style/Item_title"
                    android:text="@string/gem_N2"
                    android:padding="2dp"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="3dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/theme_color_8_opacity">

                <TextView
                    android:id="@+id/jewel_gem3_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    style="@style/Item_section"
                    android:text="@string/gem_title" />

                <TextView
                    android:id="@+id/jewel_gem3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"

                    android:text="gem"
                    style="@style/Item_text"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="3dp"
                android:layout_marginHorizontal="10dp"
                android:background="@color/theme_color_8_opacity"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/jewel_number3_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"

                    style="@style/Item_section"
                    android:text="@string/number_title" />

                <TextView
                    android:id="@+id/jewel_number3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"

                    style="@style/Item_text"
                    android:text="Nombre" />

                <TextView
                    android:id="@+id/jewel_workgem3_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"

                    style="@style/Item_section"
                    android:text="@string/work_title" />

                <TextView
                    android:id="@+id/jewel_workgem3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"

                    style="@style/Item_text"
                    android:text="travail" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="3dp"
            android:layout_marginHorizontal="10dp"
            android:background="@color/theme_color_8_opacity">

            <TextView
                android:id="@+id/jewel_price_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"

                style="@style/Item_section"
                android:text="@string/price_title"/>

            <TextView
                android:id="@+id/jewel_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"

                android:text="prix"
                style="@style/Item_text" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>