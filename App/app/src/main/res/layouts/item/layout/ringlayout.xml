<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/background_item_image"
        android:scaleType="fitXY"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignTop="@id/container"
        android:layout_alignBottom="@id/container"
        android:layout_alignLeft="@id/container"
        android:layout_alignRight="@id/container"/>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        style="@style/Item_style">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:background="@drawable/item_button_border">

                <ImageView
                    android:id="@+id/ring_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:srcCompat="@tools:sample/avatars[0]" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="7">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Anneau"
                    android:fontFamily="@font/seagram"
                    android:textColor="@color/text_color_5"
                    android:textAlignment="textEnd"
                    android:textSize="10sp"
                    android:textStyle="italic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="4"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="5dp"
                            android:layout_marginVertical="7dp"

                            android:background="@drawable/title_border"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/ring_name"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/theme_error_opacity"

                                android:fontFamily="@font/seagram"
                                android:padding="4dp"
                                android:text="Name"
                                android:textAlignment="center"
                                android:textColor="@color/text_color_5"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="5dp"
                            android:background="@color/theme_color_8_opacity"
                            android:orientation="horizontal"
                            android:padding="3dp">

                            <TextView
                                android:id="@+id/ring_price_info"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"

                                android:textColor="@color/text_color_3"
                                android:fontFamily="@font/seagram"
                                android:text="Prix :"
                                android:textAlignment="center"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/ring_price"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"

                                android:textColor="@color/text_color_5"
                                android:fontFamily="@font/seagram"
                                android:text="price"
                                android:textAlignment="center"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/ring_delete"
                        android:layout_width="0dp"
                        android:layout_height="39dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"

                        android:background="@drawable/item_button_border"
                        android:backgroundTint="@color/theme_button_1_opacity"
                        app:srcCompat="@android:drawable/ic_menu_delete" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ring_part_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:background="@color/theme_color_8_opacity"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:id="@+id/ring_part_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:textColor="@color/text_color_3"
                android:fontFamily="@font/seagram"
                android:text="Propriété particulière : "
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ring_part"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:textColor="@color/text_color_5"
                android:fontFamily="@font/seagram"
                android:text="prop"
                android:textAlignment="center"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/ring_smartitem_layout"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ring_smartitem"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"

                android:background="@drawable/button_border_2"
                android:text="Objet intelligent"
                android:textAlignment="center"
                android:fontFamily="@font/seagram"
                android:textColor="@color/text_color_1"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>