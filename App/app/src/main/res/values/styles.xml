<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainMenu" parent="Theme.AppCompat.NoActionBar">
    </style>

    <style name="ToolBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/seagram</item>
        <item name="android:textColor">@color/text_color_2</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SpinnerTheme">
        <item name="android:textColor">@color/text_color_1</item>
        <item name="android:fontFamily">@font/seagram</item>
        <item name="android:background">@color/theme_color_2</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="SpinnerSelectedItem">
        <item name="android:fontFamily">@font/seagram</item>
        <item name="android:textColor">@color/text_color_1</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/theme_color_8</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="Item_style">
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <style name="Item_style_2">
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="Dialog_style">
        <item name="android:fontFamily">@font/seagram</item>
        <item name="android:textColor">@color/text_color_2</item>
    </style>
    
</resources>
