<resources>

    <style name="StandartTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:fontFamily">@font/seagram</item>
    </style>

    <style name="SavePreviewStyle">
        <item name="android:textColor">@color/text_color_5</item>
        <item name="android:fontFamily">@font/seagram</item>
    </style>




    <style name="ToolBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/seagram</item>
        <item name="android:textColor">@color/text_color_2</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SpinnerTheme">
        <item name="android:textColor">@color/text_color_1</item>
        <item name="android:fontFamily">@font/seagram</item>
        <item name="android:background">@color/theme_color_2</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SpinnerTheme2">
        <item name="android:textColor">@color/text_color_1</item>
        <item name="android:fontFamily">@font/seagram</item>
        <item name="android:background">@color/theme_color_7</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SpinnerSelectedItem">
        <item name="android:fontFamily">@font/seagram</item>
        <item name="android:textColor">@color/text_color_1</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/theme_color_8</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="Item_style">
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <style name="Item_style_2">
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>


    <style name="Item_title">
        <item name="android:padding">4dp</item>
        <item name="android:background">@color/theme_error_opacity</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_color_5</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Item_section">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_color_3</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Item_text">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_color_5</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Item_info">
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/text_color_5</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Dialog_style">
        <item name="android:fontFamily">@font/seagram</item>
        <item name="android:textColor">@color/text_color_2</item>
    </style>

    <style name="Button_style_1">
        <item name="android:background">@drawable/button_1_ripple_effect</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_color_2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button_style_2">
        <item name="android:background">@drawable/button_2_ripple_effect</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_color_5</item>
        <item name="android:textStyle">bold</item>
    </style>
    
</resources>
